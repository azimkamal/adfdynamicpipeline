{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "demoSepADF"
		},
		"ls_azsqldb_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ls_azsqldb'"
		},
		"ls_blobstrg_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ls_blobstrg'"
		},
		"ls_dataLake_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ls_dataLake'"
		},
		"ls_azKeyVault_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://azdemosepKeyVault.vault.azure.net/"
		},
		"ls_dataLake_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://azdemoadls2.dfs.core.windows.net/"
		},
		"ls_dataLake_managedIdentity_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://azdemoadls2.dfs.core.windows.net/"
		},
		"ls_http_git_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://raw.githubusercontent.com/djpmsft/adf-ready-demo/master/moviesDB.csv"
		},
		"ls_http_rebricks_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://cdn.rebrickable.com/media/downloads/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "demoSepADF_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ls_azsqldb_connectionString": {
						"value": "[parameters('ls_azsqldb_connectionString')]"
					},
					"ls_blobstrg_connectionString": {
						"value": "[parameters('ls_blobstrg_connectionString')]"
					},
					"ls_dataLake_accountKey": {
						"value": "[parameters('ls_dataLake_accountKey')]"
					},
					"ls_azKeyVault_properties_typeProperties_baseUrl": {
						"value": "[parameters('ls_azKeyVault_properties_typeProperties_baseUrl')]"
					},
					"ls_dataLake_properties_typeProperties_url": {
						"value": "[parameters('ls_dataLake_properties_typeProperties_url')]"
					},
					"ls_dataLake_managedIdentity_properties_typeProperties_url": {
						"value": "[parameters('ls_dataLake_managedIdentity_properties_typeProperties_url')]"
					},
					"ls_http_git_properties_typeProperties_url": {
						"value": "[parameters('ls_http_git_properties_typeProperties_url')]"
					},
					"ls_http_rebricks_properties_typeProperties_url": {
						"value": "[parameters('ls_http_rebricks_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "demoSepADF_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'demoSepADF_ArmTemplate_0')]"
			]
		}
	]
}